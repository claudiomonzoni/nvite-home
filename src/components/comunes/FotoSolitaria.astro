---
interface Props {
  arriba?: boolean;
  gradientePorciento?: number; // porcentaje del gradiente
  src: string; // Ahora acepta URL de imagen como string
}
const { arriba, src, gradientePorciento } = Astro.props;
---

<div
  class={`solita ${arriba ? "gradiente-arriba" : "gradiente-abajo"}`}
  style={`--grad-p: ${gradientePorciento ?? 20}%`}
>
  <img src={src} alt="Imagen de invitaciones.com" width="500" height="500" />
</div>

<style lang="scss">
  .solita {
    position: relative;
    overflow: hidden;
    z-index: -1;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    &.gradiente-arriba::after,
    &.gradiente-abajo::after {
      content: "";
      position: absolute;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      pointer-events: none;
    }
    &.gradiente-arriba::after {
      top: -6px;
      background: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 1) 0,
        transparent var(--grad-p, 20%)
      );
    }
    &.gradiente-abajo::after {
      bottom: 0;
      background: linear-gradient(
        to top,
        rgba(255, 255, 255, 1) 0,
        transparent var(--grad-p, 20%)
      );
    }
    @media (min-width: 799px) {
      img {
        margin: 0 auto;
        aspect-ratio: 1 / 1;
        max-width: 50%;
        max-height: 50%;
      }
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';
  gsap.registerPlugin(ScrollTrigger);

  function animateFotosSolitaria() {
    const containers = document.querySelectorAll('.solita');
    containers.forEach(container => {
      const img = container.querySelector('img');
      if (img) {
        gsap.fromTo(
          img,
          { yPercent: 35,
            scale: 1.4,
          },
          {
            yPercent: 0,
            scale: 1,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: container,
              start: 'top bottom',
              end: 'bottom 20%',
              scrub: 1,
              toggleActions: 'play reverse play reverse',
              //markers: true,
            },
          }
        );
      }
    });
  }

  if (document.readyState === 'complete') {
    animateFotosSolitaria();
  } else {
    window.addEventListener('load', animateFotosSolitaria);
  }
</script>
