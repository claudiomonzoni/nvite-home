---
interface Props {
  id?: string;
  clases?: string;
  conBorde?: boolean;
  redondo?: boolean;
  sombra?: boolean;
  tema?: string;
  url: string;
  texto?: string;
}
const { clases, conBorde, redondo, sombra, tema, url, texto,  ...rest } = Astro.props;
---

<a
  href={url}
  class:list={["btn", clases, tema, { "con-borde": conBorde, "redondo": redondo, "sombra": sombra }]}
  {...rest}>
  {texto}
</a>

<style lang="scss">
  @use "../../estilos/quince/_variables.scss" as *;

  @mixin liga($conBorde, $redondo) {
  margin: $margen-min 0;
  color: white;
  background: var(--acento);
  padding: $margen-min $margen-cel;
  @if $conBorde {
    border: 1px solid var(--acento);
    background: var(--secundario);
    opacity: 0.8;
    color: var(--primario);
  }
  @if $redondo {
    border-radius: $radio;
  }
}

.btn {
  @include liga(false, false);
}
.con-borde {
  @include liga(true, null);
}
.redondo{
  @include liga(null, true);
}

</style>