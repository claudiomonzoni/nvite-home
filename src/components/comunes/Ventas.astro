---
import { Icon } from "astro-icon/components";
import Anchor from "./Anchor.astro"

interface Props {
  costo: number;
  version: string;
  stripe: string;
  tipo: string;
}
const { costo, version, stripe, tipo } = Astro.props;
const url = Astro.url.origin;
const tipos = ["plus", "reg", "basic"];	

---

<div class="grid contenido">
  <div class="flex" id="bloqueventas">
    <div class="info">
      <h3><b>Nvitación</b> de {tipo} / <span> {version === "reg" ? "regular" : version}</span></h3>
      <Anchor
      url={stripe}
      id={"estilo"}
      clases={"large"}
      conBorde={false}
      redondo={true}
      sombra={true}
      tema={"secundario"}
      texto={`Comprar $${costo} MXN.`}
      />

    </div>
    <div id="whats">
      <a href=`https://api.whatsapp.com/send/?phone=5217551132468&text=%20me%20contacto%20desde%20nvitaciones.com%20me%20interesa%20la%20invitación%20de%20${tipo}%20${version}` target="_blank"><Icon name={"whatsapp"} size={40} /> Tambien puedes contactarnos directamente para obtener esta invitación.</a>

      
    <div id="version">
      <h4>Otras versiones de invitaciones de <b>{tipo}</b> </h4>
      {
        tipos.map(
          (ver) => (
            ver !== version ? (
              <Anchor
                url={`${url}/${tipo}/nvita-${tipo}-${ver}?id=2`}
                id={"estilo"}
                clases={"large"}
                conBorde={false}
                redondo={true}
                sombra={false}
                tema={"primario"}
                texto={ver}
              />
            ) : null
          )
        )
      }
    </div>

    <Anchor
    url={"https://nvitaciones.com"}
    id={"estilo"}
    clases={"large"}
    conBorde={true}
    redondo={true}
    sombra={false}
    tema={"primario"}
    texto={"regresar a inicio"}
  />

  </div>
  </div>
</div>
