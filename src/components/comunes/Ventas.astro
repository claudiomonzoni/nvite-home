<style lang="scss">
  @use "../../estilos/_variables.scss" as *;


  #bloqueventas {
    background-color: $primario;
    margin: $margen 0;
    padding: $margen $margen-cel;
    min-height: 20vh;
    display: flex;
    flex-wrap: wrap;

    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    align-content: space-evenly;
    position: relative;
    .info {
      text-align: center;
    }
    .item {
      padding: 0.5rem;
    }
    #version {
      flex: 1 0 100%;
      flex-wrap: wrap;
      justify-content: center;
      display: flex;
    }
    h3 {
      justify-content: center;
      font-family: "Playwrite CU", serif;
      font-weight: 100;
      text-align: center;
      padding: 0;
      margin: 0;
      font-size: clamp(1.5rem, 2.5vw, 3rem);
      span {
        color: $fondo;
        font-weight: bold;
      }
      b {
        color: $acento !important;
      }
    }

    h4 {
      color: wheat;
      font-family: $fuenteB, sans-serif;
      flex: 1 0 100%;
      justify-content: center;
      text-align: center;
      line-height: 2rem;
    }
  }
  #compra {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1.5rem 0;
  }
  #whats {
    border-bottom: solid 1px $fondo;
    a {
      display: inline-flex;
      gap: 1rem;
      color: wheat;
      margin: 1rem;
      text-decoration: underline;
    }
   
  }
