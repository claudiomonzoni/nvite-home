---
import Anchor from "./Anchor.astro"

interface Props {
  costo: number;
  version: string;
  stripe: string;
  tipo: string;
}
const { costo, version, stripe, tipo } = Astro.props;
const url = Astro.url.origin;
const tipos = ["plus", "reg", "basic"];	
---

<div class="grid contenido">
  <div class="flex" id="bloqueventas">
    <div class="info">
      <h3><b>Nvitaci√≥n</b> de {tipo} / <span> {version === "reg" ? "regular" : version}</span></h3>
      <Anchor
      url={stripe}
      id={"estilo"}
      clases={"large"}
      conBorde={false}
      redondo={true}
      sombra={true}
      tema={"secundario"}
      texto={`Comprar $${costo} MXN.`}
      />

    </div>
    <div id="version">
      <h4>Otras versiones de invitaciones de <b>{tipo}</b> </h4>
      {
        tipos.map(
          (ver) => (
            ver !== version ? (
              <Anchor
                url={`${url}/${tipo}/nvita-${tipo}-${ver}?id=2`}
                id={"estilo"}
                clases={"large"}
                conBorde={false}
                redondo={true}
                sombra={false}
                tema={"primario"}
                texto={ver}
              />
            ) : null
          )
        )
      }
    </div>

    <Anchor
    url={"https://nvita.me"}
    id={"estilo"}
    clases={"large"}
    conBorde={true}
    redondo={true}
    sombra={false}
    tema={"primario"}
    texto={"regresar a inicio"}
  />
  </div>
</div>

<style lang="scss">
  @import "../../estilos/_variables.scss";
  #bloqueventas {
    background-color: #484f8c;
    margin-top: $margen;
    color: white;
    min-height: 20vh;
    display: flex;
    flex-wrap: wrap;
    border-radius: 1rem;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    align-content: space-evenly;
    padding: 2rem;
    margin-bottom: 1rem;
    .info{
        text-align: center;
    }
    #version {
      flex: 1 0 100%;
      flex-wrap: wrap;
      justify-content: center;
      display: flex;
    }
    h3 {
      span {
        color: white;
        font-weight: bold;
      }
    //   flex: 1 0 100%;
    //   display: flex;
      justify-content: center;
      font-family: Montserrat, sans-serif;
      font-weight: 100;
      color: #ffce95;
    //   flex: 1 0 100%;
      text-align: center;
      padding: 0;
      margin: 0;
      font-size: clamp(1.5rem, 2.5vw, 3rem);
    }

    h4 {
      font-family: Montserrat, sans-serif;
      flex: 1 0 100%;
      justify-content: center;
      text-align: center;
    }
  }
</style>
