---
interface Props {
  categoria: string;
  nombre: string;
}

const { categoria, nombre } = Astro.props;

// Mapeo de categorías a sus rutas y nombres
const categoriaMap = {
  'bodas': {
    ruta: '/bodas',
    nombre: 'Invitaciones de Boda'
  },
  'quince': {
    ruta: '/invitaciones-quince',
    nombre: 'Invitaciones de XV Años'
  },
  'cumpleaños': {
    ruta: '/invitaciones-pdf',
    nombre: 'Invitaciones PDF'
  },
  'pdf': {
    ruta: '/invitaciones-pdf',
    nombre: 'Invitaciones PDF'
  }
};
console.log(categoria)
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ul>
    <li><a href="/">Inicio</a></li>    <li><a href={categoriaMap[categoria]?.ruta || `/${categoria}`}>{categoriaMap[categoria]?.nombre || categoria}</a></li>
    <li><span aria-current="page">{nombre}</span></li>
  </ul>
</nav>

<style>
  .breadcrumb {
    padding: .4rem 0;
    margin-bottom: 1rem;
    font-size: .8rem;

  }

  .breadcrumb ul {
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .breadcrumb li {
    list-style: none;
    display: flex;
  
  }

  .breadcrumb li:not(:last-child)::after {
    content: "\203A";
    font-size: 1rem;
    margin: 0 0.2rem;
    color: #ee6a6a;
  }

  .breadcrumb a {
    color: #ee6a6a;
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: #0056b3;
  }

  .breadcrumb span {
    color: #6c757d;
  }
</style>
