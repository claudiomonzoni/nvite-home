---
interface Props {
  mamaNovia: string;
  papaNovia: string;
  mamaNovio: string;
  papaNovio: string;
}

const { mamaNovia, papaNovia, mamaNovio, papaNovio } = Astro.props;
---

<div class="bande">
  <h2>nuestros padres</h2>
  <div class="conte">
    <ul class="padre">
      <hr />
      <h3>Novia</h3>
      <li>{mamaNovia}</li>
      <li>{papaNovia}</li>
    </ul>
    <ul class="padre">
      <hr />
      <h3>Novio</h3>
      <li>{mamaNovio}</li>
      <li>{papaNovio}</li>
    </ul>
  </div>
</div>

<style lang="scss">
  @import "../../estilos/bodas/_variables.scss";
  h2 {
    text-align: center;
    font-family: $garigol, serif;
  }
  .bande {
    background: rgb(254, 241, 241);
    background: linear-gradient(0deg, $terciario 0%, #fff 60%);
    border-radius: $radio;
    font-size: clamp(1.5rem, 1.7vw, 2.4vw);
    z-index: -2;
  }
  .conte {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: $margen;
    position: relative;
    @include cel {
      flex-wrap: wrap;
      text-align: center;
      .padre:last-child {
        margin-top: $margen-cel;
      }
    }
  }
  hr {
    position: absolute;
    left: 0;
    top: 8%;
    width: 100%;
    z-index: -1;
    @include cel {
      top: 2%;
    }
  }
  .padre {
    position: relative;

    h3 {
      //   background-color: #fff;
      display: inline-block;
      background-color: transparentize($color: #fff, $amount: 0.1);
      background-blend-mode: difference;
      backdrop-filter: blur(20%);
      border-radius: 4px;
      padding: 0em 0.6em 0 0;
      @include cel {
        padding: 0em 0.6em;
      }
    }
    // flex: 1 0 fit-content;
    width: fit-content;
  }
</style>
