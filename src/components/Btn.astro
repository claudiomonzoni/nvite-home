---
import { Icon } from "astro-icon/components";

interface Props {
  liga: string;
  texto: string;
  claro: boolean;
  blank?: boolean;
  clases?: string;
  id?: string;
  rel?: string;
  icono?: string;
}
const { liga, texto, claro, blank, clases, rel, icono, ...rest } = Astro.props;
---

<a
  href={liga}
  class:list={clases}
  target={blank ? "_blank" : ""}
  {...rest}
  rel={rel}
  set:html={texto}
>
  {icono ? <Icon name={icono} size={25} /> : ""}
  <slot />
</a>

<style lang="scss">
  @use "../estilos/_variables.scss" as *;
  @mixin btn {
    padding: 8px 20px;
    display: inline-block;
    text-decoration: none;
    border-radius: $radio;
    margin: 0 0 $margen-min 0;
    border: none;
    font-weight: 600;
    white-space: nowrap;
    text-align: center;
    max-width: fit-content;
    font-weight: 400;
    svg {
      color: currentColor !important;
      fill: currentColor !important;
    }
    @include cel {
      margin-top: $margen-min;
      max-width: 100%;
    }
  }

  .btn-claro {
    background-color: $primario;
    color: $fondoGlobal;
    @include btn;
  }
  .btn-oscuro {
    background-color: $secundario;
    color: $primario;
    @include btn;
  }
  .btn-bordes {
    border: 1px solid $secundario !important;
    color: $secundario;
    @include btn;
  }
  .btn-bordes-oscuro {
    margin-top: 1rem !important;
    background-color: $acento;
    color: white;
    svg {
      color: currentColor !important;
      fill: currentColor !important;
    }
    @include btn;
  }
  .btn-ver-nvitaciones {
    background: linear-gradient(178deg, $fondoGlobal, $secundario);
    border: 1px solid $secundario !important;
    color: $primario;
    justify-content: left !important;
    @include btn;
    @extend .sombra;
  }
  .btn-whatsapp {
    background-color: $fondoGlobal;
    color: $acento;
    @include btn;
  }
  .centrado {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }
</style>
