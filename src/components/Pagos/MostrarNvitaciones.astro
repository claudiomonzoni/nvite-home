---
import { getCollection } from "astro:content";
const productos = await getCollection("productos");
import ProductoCard from "../Pagos/ProductoCard.astro";
const { dondeEstoy } = Astro.props;

// Filtrado de productos mejorado
const filteredProducts = productos.filter(producto => {
  // Obtener la categoría del producto, asegurándonos de que sea string y en minúsculas
  const categoria = (producto.data.metadata?.Categoria || '').toLowerCase();
  const dondeEstoyLower = (dondeEstoy || '').toLowerCase();
  
  // En la página principal, mostrar todos los productos excepto los PDF
  if (!dondeEstoy || dondeEstoy === 'home') {
    return !categoria.includes('pdf');
  }
  
  // Para las páginas de categoría, filtrar según la categoría
  return categoria.includes(dondeEstoyLower);
});

