---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { getProductPrice } from "../../js/cart";
import Btn from "../Btn.astro";
import nvitacionesData from "../../pages/nvitaciones/nvitaciones.json";

type Props = {
  producto: CollectionEntry<"productos">;
};

const { producto } = Astro.props;
const nvitacionInfo = nvitacionesData.find(
  (item) => item.id === producto.data.id
);

const precio = await getProductPrice(producto);

// Calcular precio tachado igual que en [id].astro
let precioTachado = precio;
if (nvitacionInfo?.precioTachado) {
  const match = precio.match(/^([^\d]+)([\d,.]+)/);
  if (match) {
    const currency = match[1];
    const priceNumber = Number(match[2].replace(/,/g, ""));
    const priceTachadoNumber = Math.round(priceNumber * 1.4);
    const priceTachadoStr = priceTachadoNumber.toLocaleString("es-MX", {
      minimumFractionDigits: 0,
    });
    precioTachado = `${currency}${priceTachadoStr}`;
  }
}
---

<article class="producto-card">
  <div class="portada">
    <a href={`/nvitaciones/${nvitacionInfo?.slug || producto.data.id}`}>
      <div class="verNvitacion">
        Ver Nvitación
      </div>
      <div class="crop">
        <Image
          src={producto.data.images[0]}
          alt={producto.data.name}
          height={320}
          width={320}
        />
      </div>
    </a>
  </div>
  <div class="info">
    <span>
      <b>{(producto.data.metadata?.Categoria || "Sin categoría")}</b> | {(producto.data.metadata?.Tipo || "Sin tipo")}
    </span>
    <div class="headinfo">
      <h2>{producto.data.name}</h2>
      <p class="precio">
      {
        nvitacionInfo?.precioTachado && (
          <span class="precioTachado">
            {precioTachado}
            <sup>.00</sup>
          </span>
        )
      }
        {precio.replace(/\.00$/, "")}<sup>.00</sup>
      </p>
    </div>
    <!-- <p set:html={producto.data.description} /> -->
  </div>
  <Btn
    data-cart
    data-action="increment"
    data-productid={producto.data.id}
    liga="#"
    texto="agregar al carrito"
    clases="btn-oscuro"
    claro={false}
    icono="mdi:cart-plus"
  />
