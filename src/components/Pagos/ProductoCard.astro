    @extend .sombra;
  }

  .portada {
    grid-column: 1 / -1;
    grid-row: 1;
    background: linear-gradient(
      to bottom,
      rgba($terciario, 0.3) 0%,
      rgba($terciario, 0.6) 50%,
      rgba($terciario, 1) 100%
