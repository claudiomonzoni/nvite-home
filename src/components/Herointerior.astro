---
// @ts-ignore
import { Picture } from "astro:assets";
import Btn from "./Btn.astro";

interface Props {
  h1: string;
  Spanh1: string;
  Spanh2?: string;
  description: string;
  imagen?: string;
  imagencel?: string;
  fondo: string;
  tema?: string;
  confianza?: string;
}
const {
  description,
  h1,
  imagen,
  imagencel,
  fondo,
  Spanh1,
  Spanh2,
  tema,
  confianza,
} = Astro.props;

import { Icon } from "astro-icon/components";
console.log(fondo);
---

<section class="grid contenido">
  <div id="hero">
    <div class="izq anime">
      <div class="bandeja anime">
        <h1 class={tema}>
          {h1}
          <span set:html={Spanh1} />
          <span set:html={Spanh2} />
        </h1>
        <p class={tema} set:html={description} />
        <div class={`cta ${tema}`}>
          <Btn
            liga="#nvitaciones"
            texto="Ver invitaciones"
            claro={false}
            clases={tema !== "rojo" ? "btn-oscuro" : "btn-claro"}
            blank={false}
          >
            <Icon name="mdi:chevron-double-down" size={25} />
          </Btn>
          <p id="confianza" set:html={confianza} />
        </div>
        <!-- <Btn liga="#formu" texto="Contáctanos" claro={true} /> -->
      </div>
    </div>

    <div class="der anime">
      <!-- <Picture src={cover} alt="Invitaciones digitales para eventos" />
        -->
      <picture>
        <source srcset={imagen} media="(min-width: 479px)" />
        <source srcset={imagencel} media="(max-width: 479px)" />
        <img
          src="/invitaciones-digitales-cover-nvitacines.webp"
          alt="nvitaciones digitales para eventos bodas y quince años"
          loading="lazy"
          decoding="async"
        />
      </picture>
    </div>
  </div>
</section>

<style lang="scss" define:vars={{ fondo }}>
  @use "../estilos/variables.scss" as *;

  #hero {
    background: var(--fondo);
    border-radius: $radio;
    display: flex;
    margin-top: 8rem;
    @include cel {
      margin-top: 13rem;
      border-radius: 1.5rem;
    }
    h1 {
      display: flex;
      flex-wrap: wrap;
      width: 100%;
      color: $acento;
      font-size: clamp(4rem, 6vw, 8rem);
      line-height: 0.8em;
      text-align: left;
      font-family: $fuenteB, serif;
      // text-shadow:
      //   2px 2px 0px var(--fondo),
      //   5px 4px 10px rgba(0, 0, 0, 0.15);
      transform: translateX(-0.5rem);
      span {
        line-height: 2em;
        flex: 1 0 100%;
        color: $primario;
        font-size: clamp(1.2rem, 1vw, 2rem);
        transform: translateX(0.5rem);
        font-weight: 400 !important;
        font-family: "Montserrat", sans-serif;
      }
      span:nth-child(2) {
        font-family: "Playfair Display", serif;
        line-height: 1em;
        font-size: clamp(1.8rem, 2.3vw, 3rem);
      }

      @include cel {
        justify-content: center;
        line-height: 0.7em;
        text-align: center;
        transform: translateX(0rem);
        @include cel {
          span {
            transform: translateX(0rem);
          }
        }
      }
    }
    p {
      margin: 0 0 $margen-cel 0;
      padding-top: 1rem;
    }
    a {
      margin: 0;
    }

    .bandeja {
      width: fit-content;
      max-width: 80%;
      p {
        margin: 0 0 $margen-cel 0;
      }
      @include cel {
        max-width: 100%;
      }
    }
    .der,
    .izq {
      display: flex;
    }
    .izq {
      padding: $margen;
      justify-content: center;
      align-items: center;
      flex: 1 0 50%;
    }
    .der {
      justify-content: center;
      align-items: center;
      flex: 1 0 50%;
      // background: url("/fondo-cover-nviteme-invitaciones-digitales.webp")
      //   no-repeat;
      // background-size: cover;
      // background-position: 190% 0%;
      // overflow: hidden;
      border-radius: $margen-min;
      picture {
        width: fit-content;
        height: auto;
        transform: translate(20px, -20px);
        @include cel {
          transform: translate(0px, 0px)!important;
        }
        img {
          object-fit: contain;
          width: 100%;
        }
      }
    }

    @include cel {
      flex-wrap: wrap;
      .izq {
        padding: $margen-cel;
        text-align: center;
        flex: 1 0 100%;
      }
      .der {
        flex: 1 0 100%;
      }
    }
  }
  .cta {
    display: flex;
    justify-content: left;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;

    p {
      font-size: 0.8rem;
      color: $acento;
      margin: 0 !important;
    }
    @include cel {
      justify-content: center;
      p {
        margin: 0 !important;
        font-size: 1rem;
      }
    }
  }
  #digitales {
    color: $primario !important;
    font-weight: 700;
    font-family: "Montserrat Alternates", sans-serif;
  }
  .oscuro {
    color: white;
    #confianza {
      color: white;
    }
  }
  .oscuro span {
    color: $secundario !important;
  }
  .rojo {
    color: white;
    span {
      color: $fondoGlobal !important;
    }
    p {
      color: $fondoGlobal !important;
    }
  }
</style>
