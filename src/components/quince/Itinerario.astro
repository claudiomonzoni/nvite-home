---
interface Props {
  listado: Array<any>;
}
const { listado } = Astro.props;
const base = import.meta.env.BASE_URL
const urlPatron = `url("${base}/patron-fondo.png")`
console.log(listado)
---

<section class="grid pantalla" id="riel">
    <ol>
      {
        listado.map((item, index) => (
          <li>
            <h4>{item.titulo}</h4>
            <p>{item.lugar}</p>
            <p>{item.hora}</p>
          </li>
        ))
      }
    </ol>

</section>

<style lang="scss" define:vars={{urlPatron}}>
  @use "../../estilos/quince/_variables.scss" as *;

  

</style>
