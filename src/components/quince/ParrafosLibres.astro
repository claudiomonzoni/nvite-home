---
interface Props {
  texto: string;
}
const { texto } = Astro.props;
---

<div class="grid contenido">
  <p class="parrafos-libres" set:html={texto}>
  </p>
</div>

<style lang="scss">
@use "../../estilos/quince/_variables.scss" as *;
  p{
    padding: 0 10%;
    text-align: center!important;
    color: var(--primario);
  }
</style>

<script>

  import gsap from "gsap";  
  
  const parrafos = gsap.utils.toArray(".parrafos-libres");
  
  parrafos.forEach((ele , id) => {
    gsap.from(ele as HTMLElement, {
      scrollTrigger: {
        trigger: ele as HTMLElement,
        start: "top 100%",
        end: "bottom 70%",
      },
      delay: 2,
      ease: "power2.out",
      y: -30,
      opacity: 0
    });
  });
</script>

