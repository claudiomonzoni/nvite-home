---
interface Props {
  texto: string;
}
const { texto } = Astro.props;
---

<div class="grid contenido">
  <p class="parrafos-libres" set:html={texto}>
  </p>
</div>


<script>

  import gsap from "gsap";  
  
  const parrafos = gsap.utils.toArray(".parrafos-libres");
  
  parrafos.forEach((ele , id) => {
    gsap.from(ele as HTMLElement, {
      scrollTrigger: {
        trigger: ele as HTMLElement,
        start: "top 100%",
        end: "top 60%",
      },
      delay: 1,
      ease: "power2.out",
      y: -30,
      opacity: 0
    });
  });
</script>

