          <li>Formulario de confirmación</li>
        </ul>
        <Btn
        liga="/bodas/nvita-bodas-plus?id=1"
        clases="btn-claro"
        texto="Ver Bodas"
        claro={true}
        />
        <Btn
        liga="/quince/nvita-quince-plus?id=1"
        clases="btn-claro"
        texto="Ver Xv Años"
        claro={true}
        />
        <br/>
        <Btn
        liga="https://buy.stripe.com/5kA8yN0VK2rxgF27su"
        clases="btn-oscuro"
        texto="Obtenla ahora"
        claro={false}
        />
      </div>

    </div>
  </div>
  <div class="izq">
    <img
      src="novios-cover-invitacion-digital-nvite.webp"
      alt="Invitaciones de bodas"
    />
  </div>
</div>
<style lang="scss">
  @import "../estilos/_variables.scss";
  h2 {
    color: $acento;
    font-size: clamp(2.2rem, 1.5vw, 2.7vw);
  }
small{
  color: $gris;
}
.precio{
  display:inline-block;
  padding-bottom: 1rem;
  border-bottom: solid 1px $terciario;
  font-weight: bolder;
  color: $primario;
  font-size: clamp(1.9rem, 1.7vw, 3vw);
}
  .banner {
    display: flex;
    flex-wrap: wrap;
  }
  .der,
  .izq {
    display: flex;
    justify-content: center;
    @include cel {
      flex: 1 0 100%;
    }
  }
  .der {
    flex: 1 0 70%;
    @tableta_land{
      flex: 1 0 80%;
      
    }
  }
  .izq {
    flex: 1 0 30%;
    width: 100px;
    align-items: end;
    @tableta_land{
      flex: 1 0 20%;
      
    }
  }
  .bande {

    margin: $margen 0;
    display: flex;
    flex-wrap: wrap;

    gap: 1.5rem
  }
  .lista {
    &:last-child {
      border: none;
    }

    border-right: solid 1px $primario;
    padding: 0 1.5rem;
    @include cel {
      border-right: none;
      border-bottom: solid 1px $primario;
      padding: 2rem 1.5rem;
  }
}
  ul {
    padding: 1rem 0;
  }
  @include cel {
    .izq,
    .der {
      flex: 1 0 100%;
    }
  }
</style>
