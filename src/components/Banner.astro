---
import Btn from "./Btn.astro";
---

<div class="banner azulBG">
  <div class="der">
    <div class="bande">
     
      
      <div class="lista">
        <h2>Nvita Basic</h2>
        <ul>
          <li>Detalles del evento</li>
          <li>Cuenta regresiva</li>
          <li>Datos de tu evento</li>
          <li>Mapas de ubicación</li>
          <li>Frase animada</li>
          <li>Formulario de confirmación sencilla</li>
        </ul>
        <Btn
        liga="/bodas/nvita-bodas-basic"
        texto="Ver invitación"
        claro={true}
        />
        <Btn
          liga="https://buy.stripe.com/9AQ5mBdIwaY374s6os"
          texto="$740"
          claro={false}
        />
      </div>

      
      <div class="lista">
        <h2>Nvita Bodas</h2>
        <ul>
          <li><b>Panel de invitados</b></li>
          <li><b>Nombre del invitado</b></li>
          <li>Detalles del evento</li>
          <li>Cuenta regresiva</li>
          <li>Datos de tu evento</li>
          <li>Mapas de ubicación</li>
          <li>Galería de imágenes</li>
          <li>Sugerencia de regalos</li>
          <li>Frase animada</li>
          <li>Formulario de confirmación</li>
        </ul>
        <Btn
        liga="/bodas/nvita-bodas-reg?id=2"
        texto="Ver invitación"
        claro={true}
        />
        <Btn
          liga="https://buy.stripe.com/7sIbKZfQE5DJ1K8eUX"
          texto="$990"
          claro={false}
        />
      </div>

      <div class="lista">
        <h2>Nvita Plus</h2>
        <ul>
          <li><b>Panel de invitados</b></li>
          <li>Música ambiental</li>
          <li><b>Nombre del invitado</b></li>
          <li>Detalles del evento</li>
          <li>Cuenta regresiva</li>
          <li>Datos de tu evento</li>
          <li>Mapas de ubicación</li>
          <li>Galería de imágenes</li>
          <li>Sugerencia de regalos</li>
          <li>Frase animada</li>
          <li><b>Itinerario</b></li>
          <li>Formulario de confirmación</li>
        </ul>
        <Btn
        liga="/bodas/nvita-bodas-plus?id=1"
        texto="Ver invitación"
        claro={true}
        />
        <Btn
        liga="https://buy.stripe.com/5kA8yN0VK2rxgF27su"
        texto="$1290"
        claro={false}
        />
      </div>

    </div>
  </div>
  <div class="izq">
    <img
      src="novios-cover-invitacion-digital-nvite.webp"
      alt="Invitaciones de bodas"
    />
  </div>
</div>
<style lang="scss">
  @import "../estilos/_variables.scss";
  h2 {
    color: $acento;
  }

  .banner {
    display: flex;
    flex-wrap: wrap;
  }
  .der,
  .izq {
    display: flex;
    justify-content: center;
    @include cel {
      flex: 1 0 100%;
    }
  }
  .der {
    flex: 1 0 70%;
    @tableta_land{
      flex: 1 0 80%;
      
    }
  }
  .izq {
    flex: 1 0 30%;
    width: 100px;
    align-items: end;
    @tableta_land{
      flex: 1 0 20%;
      
    }
  }
  .bande {

    margin: $margen 0;
    display: flex;
    flex-wrap: wrap;

    gap: 1.5rem
  }
  .lista {
    &:last-child {
      border: none;
    }

    border-right: solid 1px $primario;
    padding: 1rem;
    @include cel {
      border-right: none;
      border-bottom: solid 1px $primario;
  }
}
  ul {
    padding: 1rem 0;
  }
  @include cel {
    .izq,
    .der {
      flex: 1 0 100%;
    }
  }
</style>
