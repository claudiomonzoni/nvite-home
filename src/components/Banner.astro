        clases="btn-claro"
        texto="Ver Bodas"
        claro={true}
        />
        <Btn
        liga="/quince/nvita-quince-reg?id=2"
        clases="btn-claro"
        texto="Ver Xv Años"
        claro={true}
        />
        <br/>
        <Btn
          liga="https://buy.stripe.com/7sIbKZfQE5DJ1K8eUX"
          clases="btn-oscuro"
          texto="Obtenla ahora"
          claro={false}
        />
      </div>

      <div class="lista">
        <small>Bodas & XV Años</small>
        <h2>Nvita Plus</h2>
        <div class="precio">$1280</div>
        <ul>
          <li><b>Panel de invitados</b></li>
          <li>Música ambiental</li>
          <li><b>Nombre del invitado</b></li>
          <li>Detalles del evento</li>
          <li>Cuenta regresiva</li>
