---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"input"> {
  checked: boolean;
  inputId: number;
  titulo: string;
}

const { inputId, checked, titulo, ...rest } = Astro.props;
---

<div class="check" >
  <input
    type="checkbox"
    checked={checked}
    class=""
    id={`check-${inputId}`}
    {...rest}
  />
  <!-- <div aria-hidden="true">
    <Icon name="bag" size={16} />
  </div> -->
  <label for={`check-${inputId}`}>{titulo}</label>
</div>

<style> 
.check{
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
label{
  padding: 0;
  text-align: left;
  font-weight: bold;
}
  input[type="checkbox"] {
    height: 1rem;
   max-width: 1rem;
   
   
  }
  input[type="checkbox"]:checked {
    background-color: #ff4444;
  }
</style>