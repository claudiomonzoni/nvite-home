---
const { dondeEstoy } = Astro.props;

import { Icon } from "astro-icon/components";
import Btn from "./Btn.astro";
---

<div class="banner azulBG">
  <div class="der">
    <div class="bande">
      <article class="lista ">
        <div class="bandeDestacada">
          <small>Bodas, 15 Años y Cumpleaños</small>
          <h2>
            Nvitación PDF Clásica
          </h2>
          <div class="precio">$250</div>
          <ul>
            <li><b>Foto principal</b></li>
            <li><b>Nombre del invitado</b></li>
            <li><b>Mapas de ubicación</b></li>
            <li>Fecha del evento</li>
            <li>Detalles del evento</li>
          </ul>

          <Btn
            liga="https://buy.stripe.com/eVa3etbAofejewU149"
            clases="btn-oscuro"
            texto="Comprar"
            claro={false}
          >
            <Icon name="bag" size={25} />
          </Btn>

          <Btn
            liga="https://wa.link/65jj5u"
            clases="btn-claro"
            texto="Solicitar ahora"
            claro={true}
            blank={true}
          >
            <Icon name="mdi:whatsapp" size={25} />
          </Btn>
        </div>
      </article>

      <article class="lista destacada">
        <small>Bodas, 15 Años y Cumpleaños</small>
        <h2>Nvitación PDF Lux  <div id="masvendido">Más vendida</div></h2>
        <div class="precio">$490</div>
        <ul>
          <li><b>Foto principal</b></li>
          <li><b>Nombre del invitado</b></li>
          <li><b>Confirmación de asistencia</b></li>
          <li><b>Mapas de ubicación</b></li>
          <li><b>Sugerencia de regalos</b></li>
          <li><b>Codigo de vestir</b></li>
          <li><b>Itinerario</b></li>
          <li>Fecha del evento</li>
          <li>Frase afectiva</li>
          <li>Detalles del evento</li>
        </ul>
        <Btn
          liga="https://buy.stripe.com/8wM6qF7k82rx1K814a"
          clases="btn-oscuro"
          texto="Comprar"
          claro={false}
        >
          <Icon name="bag" size={25} />
        </Btn>
        <Btn
          liga="https://wa.link/l03byi"
          clases="btn-claro"
          texto="Solicitar ahora"
          claro={true}
          blank={true}
        >
          <Icon name="mdi:whatsapp" size={25} />
        </Btn>

      </article>
    </div>
  </div>
  {
    dondeEstoy === "home" ? (
      <div class="izq">
        <img
          src="novios-cover-invitacion-digital-nvite.webp"
          alt="Invitaciones de bodas"
        />
      </div>
    ) : (
      ""
    )
  }
</div>
<style lang="scss">
  @use "../estilos/_variables.scss" as *;
  h2 {
    color: $acento;
    font-size: clamp(2.2rem, 1.5vw, 2.7vw);
    position: relative;
  }
  small {
    color: $gris;
  }
  b {
    color: $primario;
    text-decoration: underline;
    text-underline-offset: 5px;
    text-decoration-thickness: 0.9px;
  }
  .precio {
    display: inline-block;
    padding-bottom: 1rem;
    border-bottom: solid 1px $terciario;
    font-weight: bolder;
    color: $primario;
    font-size: clamp(1.9rem, 1.7vw, 3vw);
  }
  .banner {
    display: flex;
    flex-wrap: wrap;
  }
  .der,
  .izq {
    display: flex;
    justify-content: center;
    @include cel {
      flex: 1 0 100%;
    }
  }
  .der {
    flex: 1 0 70%;
    @tableta_land {
      flex: 1 0 80%;
    }
  }
  .izq {
    flex: 1 0 30%;
    width: 100px;
    align-items: center;
    @tableta_land {
      flex: 1 0 20%;
    }
  }
  .bande {
    margin: $margen 0;
    display: flex;
    flex-wrap: wrap;
  }
  .lista {
    min-width: min-content;
    justify-content: center;
    align-self: center;
    flex: 1;
    // border-right: solid 1px $primario;
    padding: 0 1.5rem;
    @include hd {
      padding: 0 3rem;
    }
    a {
      justify-self: flex-start;
      svg {
        vertical-align: middle;
      }
    }

    @include cel {
      flex: 1 0 100%;
      border-right: none;
      // border-bottom: solid 1px $primario;
      padding: 2rem 1.5rem;
      position: relative;
      a {
        width: 100%;
      }
    }
  }
  .destacada {
    background: white;
    background: linear-gradient(
      0deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 1) 100%
    );
    border-radius: $radio;
    padding: 1rem;
    @extend .sombra;
  }
  #masvendido {
    border-bottom: solid 2px $primario;
    position: absolute;
    background: rgb(255, 255, 255, 0.4);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(3px);
    @extend .sombra;
    border-radius: $radio;
    color: $primario;
    font-size: clamp(0.8rem, 0.6vw, 1vw);
    padding: 0 0.5rem;
    transform: rotate(-5deg);
    right: 0;
    top: 35%;
  }
  .conteBtn {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    @include cel {
      gap: 0.2rem;
    }
  }
  .conteBtn > * {
    min-width: fit-content;
    text-align: center;
    flex: 1;
  }
  ul {
    padding: 1rem 0;
    li::marker {
      color: $secundario;
    }
  }
  @include cel {
    .izq,
    .der {
      flex: 1 0 100%;
    }
  }
</style>
