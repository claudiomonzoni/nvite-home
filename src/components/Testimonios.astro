<style lang="scss">
  @use "../estilos/_variables.scss" as *;

  .testimonios {
    padding: 5rem 0;
    background: linear-gradient(180deg, $fondoGlobal, $terciario);

    &__container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    &__title {
      font-size: 2.5rem;
      font-weight: bold;
      text-align: center;
      margin-bottom: 3rem;
      color: $acento;
    }

    &__card {
      background-color: $fondoGlobal;
      padding: 2rem;
      border-radius:$radio;
    //  @extend .sombra;
    }

    &__image {
      width: 2rem;
      height: 2rem;
      border-radius: 50%;
      margin: 0 auto 1rem;
      display: block;
    }

    &__name {
      font-size: 1.25rem;
      text-align: center;
      color: $primario;
    }

    &__text {
      text-align: center;
      margin-top: 1rem;
      color: $primario;
    }
  }

  :global(.swiper-button-next),
  :global(.swiper-button-prev) {
    color: $acento;
    top: 2rem;
    
    &::after {
      font-size: 1.3rem; // Reduce el tama√±o del √≠cono
      font-weight: bold;
    }
    
    @include cel {
        display: none;
    }
  }

  :global(.swiper-button-next) {
    right: 1rem; // Ajustado de la posici√≥n original
  }

  :global(.swiper-button-prev) {
    left: 1rem; // Ajustado de la posici√≥n original
  }

  :global(.swiper-pagination-bullet-active) {

    background: $acento;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';

  new Swiper('.testimonios-swiper', {
    modules: [Navigation, Pagination, Autoplay],
    slidesPerView: 1,
    spaceBetween: 30,
    loop: true,
    autoplay: {
      delay: 4000,
      disableOnInteraction: false,
      pauseOnMouseEnter: true, // Pausa al hacer hover
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    },
  });
</script>
