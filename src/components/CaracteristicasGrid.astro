<style lang="scss">
  @use "../estilos/_variables.scss" as *;

  #caracteristicash2 :global(span) {
    color: $secundario;
  }
  .p-itemGlobal :global(span) {
    font-weight: bold;
    font-size: clamp(1.5rem, 2vw, 2rem);
    @include cel {
      font-size: 1rem;
    }

  }

 h2{
  font-weight: 600;
 }
  #caracteristicas {
    @extend .sombra;
    margin: 0 auto;
    // width: 80%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto;
    background: $gris;
    border-radius: $radio;
    .item {
      place-content: center;
      padding: $margen $margen-cel;
      text-align: center;
      line-height: 1.5rem;
    }
    #item-a {
      grid-column: 1 / -1;
      display: flex;
      position: relative;

      .info {
        border-top-left-radius: $radio;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: $primario;
      }
      .conte {
        width: 80%;
        h2,
        p {
          color: #fff;
        }
      }
      .imagen {
        flex: 1;
        position: relative;
        height: calc(100% + 34px);
        top: -34px;
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
    #item-b {
      border-bottom-left-radius: $radio;
      background: $secundario;
      grid-column: 1 / span 2;
      grid-row: 2 / span 2;
      h3 {
        color: $acento;
      }
      svg {
        color: $acento!important;
      }
    }
    #item-c {
      background: $acento;
      grid-column: 3 / span 1;
      grid-row: 2 / span 2;
      p {
        color: #fff;
      }
      svg {
        color: white!important;
      }
    }
    #item-d {
      background: #fff;
      grid-column: 4 / span 1;
      grid-row: 2 / span 1;
    }
    #item-e {
      grid-column: 4 / span 1;
      grid-row: 3 / span 1;
      p {
        color: $terciario;
      }
    }

    @include cel {
      grid-template-rows: repeat(5, auto);
      // width: 100%;
      h2{
        font-size: 1.8rem;
      }
  
      #item-a {
        flex-wrap: wrap;
        grid-column: 1 / -1;
        grid-row: 1 / span 1;
        display: grid;
        .imagen {
          order: 0;
        }
        .info {
          order: 1;
          border-top-left-radius: 0;
          padding: $margen 0;
        }
        .info,
        .imagen {
          flex: 1 0 100%;
        }
      }
      #item-b {
        grid-column: 1 / -1;
        grid-row: 2 / span 1;
        border-bottom-left-radius: 0;
      }
      #item-c {
        grid-column: 1 / -1;
        grid-row: 3 / span 1;
        height: auto;
        background: #fff;
        p,
        svg {
          color: $acento!important;
        }
      }
      #item-d {
        grid-column: 1 / span 2;
        grid-row: 4 / span 1;
        background: $acento;
        border-bottom-left-radius: $radio;
        p{
          color: #fff;}
      }
      #item-e {
        grid-column: 3 / span 2;
        grid-row: 4 / span 1;
      }
    }
  }
</style>
