---
import { Icon } from "astro-icon/components";
import Btn from "./Btn.astro";

interface MatrizItems {
  titulo?: string;
  imagen?: string;
  texto?: string;
  enlace?: string;
  txtbtn?: string;
  icono?: string;
}
interface Props {
  matriz: Array<MatrizItems>;
}
const { matriz } = Astro.props;
// console.log(matriz[2].texto);
---

<div class="grid contenido">
  <div id="caracteristicas">
    <div id="item-a">
      <div class="info">
        <div class="conte">
          <h2 set:html={matriz[0].titulo} id="caracteristicash2" />
          <p set:html={matriz[0].texto}> </p>
            
          <Btn
          liga={matriz[0].enlace ? matriz[0].enlace : "#formu"}
            texto={matriz[0].txtbtn ? matriz[0].txtbtn : "Saber mÃ¡s"}
            claro={false}
            clases="btn-bordes"
          >
            <Icon name={matriz[0].icono ? matriz[0].icono : "mdi:check-all"} size={25} />
          </Btn>
        </div>
      </div>
      <div class="imagen">
        <img
          src={matriz[0].imagen}
          alt="Invitaciones digitales / Nvitaciones"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
    <div id="item-b" class="item">
      <Icon name={matriz[1].imagen} size={45} />
      <h3 set:html={matriz[1].titulo} />
      <p set:html={matriz[1].texto} />
    </div>
    <div id="item-c" class="item">
      <Icon name={matriz[2].imagen} size={45} />
      <p>
        {matriz[2].texto}
      </p>
    </div>
    <div id="item-d" class="item">
      <p class="p-itemGlobal" set:html={matriz[3].texto} />
    </div>
    <div id="item-e" class="item">
      <p class="p-itemGlobal" set:html={matriz[4].texto} />
   
      </p>
    </div>
  </div>
</div>
