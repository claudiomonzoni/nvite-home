---
import Layout from "../../layouts/panelInvitados.astro";
---

<Layout title="Ingreso a panel de invitador">
  <div id="ingreso">
    <div class="izq">
      <div class="bandeja">
        <img
          src="/nvita-logo.svg"
          alt="Nvita invitaciones digitales"
          id="logo"
        />
        <h1>Ingresa a tu panel de invitados</h1>
        <p>Administra, edita y agrega invitados a tu evento.</p>

        <form data-authForm action="../api/ingresar.json">
          <label for="email"
            >Email

            <input
              type="email"
              name="email"
              id="email"
              placeholder="Agrega un email valido"
            />
          </label>
          <label for="password"
            >Contaseña

            <input
              type="password"
              name="password"
              id="password"
              autocomplete="password"
              placeholder="Agrega una contraseñá segura"
            />
          </label>
          <button>Ingresa</button>
        </form>
        <p>Aún no tienes cuenta? <a href="/panel/registro">Registrate</a></p>
      </div>
    </div>
    <div class="der">
      <img src="https://placehold.co/600x400" alt="" />
    </div>
  </div>
</Layout>

<style lang="scss">
  @import "../../estilos/_variables.scss";
  #logo {
    max-width: 200px;
    margin: $margen-cel;
  }

  #ingreso {
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background-color: $fondo;
    color: #fff;
  }
  h1 {
    font-size: clamp(2rem, 3vw, 5rem);
    color: $primario;
  }
  .izq {
    display: flex;
    flex: 1 0 50%;
    .bandeja {
      padding: $margen;
      text-align: center;
    }
    @include cel {
      .bandeja {
        padding: $margen-cel;
      }
      order: 2;
    }
  }
  form {
    display: flex;
    flex-wrap: wrap;
    text-align: left;
    width: 40%;
    margin: 0 auto;
    @include cel {
      width: 100%;
    }
  }
  label {
    flex: 1 0 100%;
    font-weight: bold;
    color: $acento;
    @include cel {
      flex: 1 0 100%;
      text-align: center;
      input{
        text-align: center;
      }
    }
  }
  input {
    width: 100%;
    border-radius: 10px;
    margin-top: .4rem;
  }
  button {
    flex: 1 0 fit-content;
    margin-top: $margen-cel;
    max-width: 250px;
    background-color: $acento;
    border: none;
    padding: .7rem;
    border-radius: 10px;
    color: #fff;
    font-weight: bold;
    font-size: clamp(1rem, .7vw, 1.2rem);
    @include cel {
      left: 50%;
      transform: translateY( -50%);
      max-width: 100%;
      margin-top: $margen;
    }
  }
  .der {
    flex: 1 0 50%;
    height: 100dvh;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    @include cel {
      order: 1;
      height: 25dvh;
    }
  }
</style>
