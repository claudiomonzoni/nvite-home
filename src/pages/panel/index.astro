    display: flex;
    gap: 2rem;
    width: 100%;
    padding: 1rem;
    background: white;
    border-radius: $radio;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    @extend .sombra;

    @include cel {
      gap: 1rem;
      padding: 0.5rem;
    }
  }

  .barra-progreso-container {
    width: 100%;


    h3 {
      color: $primario;
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }
  }

  .barra-progreso {
    width: 100%;
    height: 5px;
    background-color: #f0f0f0;
    border-radius: 10px;
    overflow: hidden;
    margin: .5rem 0;
  }

  .barra {
    height: 100%;
    width: 0;
    background: linear-gradient(to right, $primario, $acento);
    animation: crecer 1.5s ease-out forwards;
