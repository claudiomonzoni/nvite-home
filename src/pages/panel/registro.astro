---
import Layout from "../../layouts/panelInvitados.astro";
---

<Layout title="Registro de usuario - Panel de administración">
  <h1>Registrate en Nvita</h1>
  <form data-authForm action="../api/registro.json">
    <label for="email">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Agrega un email valido"
    />
    <label for="password">Contaseña</label>
    <input
      type="password"
      name="password"
      id="password"
      autocomplete="password"
      placeholder="Agrega una contraseñá segura"
    />
    <label for="tipoInvitacion">Tipo Invitacion</label>
    <select name="tipoInvitacion" id="tipoInvitacion">
      <option value="boda">Boda</option>
      <option value="quince">Xv años</option>
      <option value="cumples">Cumpleaños</option>
    </select>

    <label for="ruta">Ruta</label>
    <input type="text" name="ruta" placeholder="Agrega una /juanyjuana/" />
    <button>Registrate</button>
  </form>
  <p>Ya tienes cuenta? <a href="/panel/ingresar">Ingresar</a></p>
</Layout>
