---
import Layout from "../../layouts/panelInvitados.astro";
---

<Layout title="Registro de usuario - Panel de administración">
  <div id="ingreso">
    <div class="izq">
      <div class="bandeja">
        <img
        src="/nvita-logo.svg"
        alt="Nvita invitaciones digitales"
        id="logo"
      />
        <h1>Registro de clientes</h1>
        <form data-authForm action="../api/registro.json">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Agrega un email valido"
          />
          <label for="password">Contaseña</label>
          <input
            type="password"
            name="password"
            id="password"
            autocomplete="password"
            placeholder="Agrega una contraseñá segura"
          />
          <label for="tipoInvitacion">Tipo Invitacion</label>
          <select name="tipoInvitacion" id="tipoInvitacion">
            <option value="bodas">Bodas</option>
            <option value="quince">Xv años</option>
            <option value="cumples">Cumpleaños</option>
          </select>
      
          <label for="ruta">Ruta</label>
          <input type="text" name="ruta" placeholder="Agrega una /juanyjuana/" />
          <button>Registrate</button>
        </form>
        <p>Ya tienes cuenta? <a href="/panel/ingresar">Ingresar</a></p>
      </div>
    </div>
    <div class="der">
      <img src="/panel-ingreso.webp" alt="panel registro de clientes" />
    </div>
  </div>
 
</Layout>

<style lang="scss">
  @import "../../estilos/_variables.scss";
  #logo {
    max-width: 200px;
    margin: $margen-cel;
  }

  #ingreso {
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background-color: $fondo;
    color: #fff;
  }
  h1 {
    font-size: clamp(2rem, 3vw, 5rem);
    color: $primario;
  }
  .izq {
    display: flex;
    flex: 1 0 50%;
    .bandeja {
      padding: $margen;
      text-align: center;
    }
    @include cel {
      .bandeja {
        padding: $margen-cel;
      }
      order: 2;
    }
  }
  form {
    display: flex;
    flex-wrap: wrap;
    text-align: left;
    padding: 0 $margen-cel;
    width: 60%;
    margin: 0 auto;
    @include cel {
      width: 100%;
    }
  }
  label {
    flex: 1 0 50%;
    font-weight: bold;
    color: $acento;
    @include cel {
      flex: 1 0 100%;
      text-align: center;
      input{
        text-align: center;
      }
    }
  }
  input, select {
    width: 100%;
    border-radius: 10px;
    margin-top: .4rem;
  }
  select {
    padding: .6rem;
  }
  button {
    flex: 1 0 fit-content;
    margin-top: $margen-cel;
    max-width: 250px;
    background-color: $acento;
    border: none;
    padding: .7rem;
    border-radius: 10px;
    color: #fff;
    font-weight: bold;
    font-size: clamp(1rem, .7vw, 1.2rem);
    @include cel {
      left: 50%;
      transform: translateY( -50%);
      max-width: 100%;
      margin-top: $margen;
    }
  }
  .der {
    flex: 1 0 50%;
    height: 100dvh;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    @include cel {
      order: 1;
      height: 25dvh;
      display: none;
    }
  }
</style>
