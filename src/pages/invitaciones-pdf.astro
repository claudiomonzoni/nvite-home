<style lang="scss">
  @use "../estilos/_variables.scss" as *;

  .intro {
    line-height: 1.1em;
    text-align: center;
    font-size: clamp(1.3rem, 1.7vw, 2.7rem);
    margin: $margen $margen-min;
  }
  #colores {
    padding-top: $margen;
    text-align: center;
    padding-bottom: $margen;
    h2 {
      color: $primario;
      b {
        color: $acento;
      }
    }
  }
  #bandejacolor {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(300px, 1fr)
    ); // Ajustar el tamaño mínimo y máximo de los videos
    gap: 1rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-bottom: $margen-cel;

    .mostrando {
      display: block;
    }
    .escondido {
      display: none;
    }
    .item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: $margen;
      h3 {
        color: $primario;
        font-size: clamp(1.5rem, 1.5vw, 1.6rem);
      }

      .video-pdf {
        width: 100%;
        aspect-ratio: 16 / 9; // Mantener proporción de video
        position: relative;

        video {
          width: 100%;
          height: 100%;
          object-fit: cover; // Asegurar que el video se ajuste al contenedor
          border-radius: $radio;
        }

        #play {
          position: absolute;
          top: 50%;
          left: 10%;
          transform: translate(-50%, -50%);
          z-index: 1000;
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 1em;
          @extend .sombra;
          border-radius: 50%;
          aspect-ratio: 1/1;
          cursor: pointer;
          path {
            fill: $acento;
          }
        }
      }

      @include cel {
        padding: 0;
        h3 {
          margin-top: $margen-cel;
        }
      }

    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const items = document.querySelectorAll("#bandejacolor .item");

    items.forEach((item) => {
      const video = item.querySelector("video") as HTMLVideoElement;
      const playButton = item.querySelector("#play") as HTMLElement;
      const mostrando = playButton.querySelector(".mostrado") as HTMLElement;
      const escondido = playButton.querySelector(".escondido") as HTMLElement;

      playButton.addEventListener("click", () => {
        if (video.paused) {
          video.play();
          mostrando.style.display = "none"; // Esconder el ícono de play
          escondido.style.display = "flex"; // Mostrar el ícono de pausa
        } else {
          video.pause();
          mostrando.style.display = "flex"; // Mostrar el ícono de play
          escondido.style.display = "none"; // Esconder el ícono de pausa
        }
      });

      video.addEventListener("ended", () => {
        mostrando.style.display = "flex"; // Restaurar el ícono de play al finalizar
        escondido.style.display = "none"; // Esconder el ícono de pausa
      });
    });

    // Hacer que funcione el botón de play/pausa en el div #choro
    const choroPlayButton = document.querySelector(
      "#video-home #play"
    ) as HTMLElement;
    const choroVideo = document.querySelector(
      "#video-home video"
    ) as HTMLVideoElement;
    const choroMostrando = choroPlayButton.querySelector(
      ".mostrado"
    ) as HTMLElement;
    const choroEscondido = choroPlayButton.querySelector(
      ".escondido"
    ) as HTMLElement;

    choroPlayButton.addEventListener("click", () => {
      if (choroVideo.paused) {
        choroVideo.play();
        choroMostrando.style.display = "none"; // Esconder el ícono de play
        choroEscondido.style.display = "flex"; // Mostrar el ícono de pausa
      } else {
        choroVideo.pause();
        choroMostrando.style.display = "flex"; // Mostrar el ícono de play
        choroEscondido.style.display = "none"; // Esconder el ícono de pausa
      }
    });

    choroVideo.addEventListener("ended", () => {
      choroMostrando.style.display = "flex"; // Restaurar el ícono de play al finalizar
      choroEscondido.style.display = "none"; // Esconder el ícono de pausa
    });
  });
</script>
