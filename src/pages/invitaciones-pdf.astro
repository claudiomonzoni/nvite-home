<style lang="scss">
  @use "../estilos/_variables.scss" as *;

  .intro {
    line-height: 1.1em;
    text-align: center;
    font-size: clamp(1.3rem, 1.7vw, 2.7rem);
    margin: $margen $margen-min;
  }
  #colores {
    padding-top: $margen;
    text-align: center;
    padding-bottom: $margen;
    h2 {
      color: $primario;
      b {
        color: $acento;
      }
    }
  }
  #bandejacolor {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(300px, 1fr)
    ); // Ajustar el tamaño mínimo y máximo de los videos
    gap: 1rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-bottom: $margen-cel;

    .mostrando {
      display: block;
    }
    .escondido {
      display: none;
    }
    .item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: $margen;
      h3 {
        color: $primario;
        font-size: clamp(1.5rem, 1.5vw, 1.6rem);
      }

      .video-pdf {
        width: 100%;
        aspect-ratio: 16 / 9; // Mantener proporción de video
        position: relative;

        video {
          width: 100%;
          height: 100%;
          object-fit: cover; // Asegurar que el video se ajuste al contenedor
          border-radius: $radio;
        }

        #play {
          position: absolute;
          top: 50%;
          left: 10%;
          transform: translate(-50%, -50%);
          z-index: 1000;
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 1em;
          @extend .sombra;
          border-radius: 50%;
          aspect-ratio: 1/1;
          cursor: pointer;
          path {
            fill: $acento;
          }
        }
      }

      @include cel {
        padding: 0;
        h3 {
          margin-top: $margen-cel;
        }
      }

    }
  }
</style>

<script>
  function initializeVideoButtons() {
    const items = document.querySelectorAll("#bandejacolor .item");

    items.forEach((item) => {
      const video = item.querySelector("video");
      const playButton = item.querySelector("#play");
      const mostrando = playButton.querySelector(".mostrado") as HTMLElement;
      const escondido = playButton.querySelector(".escondido") as HTMLElement;

      playButton.addEventListener("click", () => {
        if (video.paused) {
          video.play();
          mostrando.style.display = "none";
          escondido.style.display = "flex";
        } else {
          video.pause();
          mostrando.style.display = "flex";
          escondido.style.display = "none";
        }
      });

      video.addEventListener("ended", () => {
        mostrando.style.display = "flex";
        escondido.style.display = "none";
      });
    });

    const choroPlayButton = document.querySelector("#video-home #play");
    const choroVideo = document.querySelector("#video-home video") as HTMLVideoElement;
    const choroMostrando = choroPlayButton.querySelector(".mostrado") as HTMLElement;
    const choroEscondido = choroPlayButton.querySelector(".escondido") as HTMLElement;

    choroPlayButton.addEventListener("click", () => {
      if (choroVideo.paused) {
        choroVideo.play();
        choroMostrando.style.display = "none";
        choroEscondido.style.display = "flex";
      } else {
        choroVideo.pause();
        choroMostrando.style.display = "flex";
        choroEscondido.style.display = "none";
      }
    });

    choroVideo.addEventListener("ended", () => {
      choroMostrando.style.display = "flex";
      choroEscondido.style.display = "none";
    });
  }

  document.addEventListener("astro:page-load", initializeVideoButtons);
</script>
