    encabezado="<b>Obtén un 30% </b>de descuento"
    texto="Durante el mes de febrero <b>aplica el cupón: AMOR30</b> a la hora de adquirir tu invitación de boda o 15 años."
    small="Solo aplica para pagos en línea, promoción valida hasta el 28 de febrero."
    img="/promo.webp"
    /> -->
  </div>    <MostrarNvitaciones dondeEstoy="home" />
  
  <div class="grid contenido">
    <div id="conteCaracteristicas">
      <Caracteristicas
        encabezado="fácil"
        texto="Agrega tus <b>invitados</b> de manera fácil."
        icono="mdi:account-multiple-add-outline"
        fondo="/fondo-nvite-caracteristicas-3.png"
        colorBg="#FFF1E1"
      />

      <Caracteristicas
        encabezado="rápido"
        texto="Envia tu invitación con un <b>solo clic.</b>"
        icono="mdi:message-text-fast"
        fondo="/fondo-nvite-caracteristicas-2.png"
        colorBg="#FFF1E1"
      />

      <Caracteristicas
        encabezado="útil"
        texto="<b>Organiza</b> todo en un solo lugar."
        icono="mdi:bookmark-check"
        fondo="/fondo-nvite-caracteristicas-4.png"
        colorBg="#FFF1E1"
      />

      <Caracteristicas
        encabezado="único"
        texto="Invitaciones con <b>estilo.</b>"
        icono="mdi:vector-bezier"
        fondo="/fondo-nvite-caracteristicas-4.png"
        colorBg="#FFF1E1"
      />
    </div>
  </div>

