---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../estilos/globales.scss";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="¡Que tu celebración sea inolvidable!, transforma las invitaciones de tu evento en una experiencia única con las invitaciones digitales de nvita"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script>
      import { formSubmit } from "../pages/panel/lib/formSubmit";
      const form = document.querySelectorAll(
        "[data-authForm]"
      ) as NodeListOf<HTMLFormElement>;
      form.forEach((form) => {
        formSubmit(form);
      });
    </script>
  </body>
</html>


